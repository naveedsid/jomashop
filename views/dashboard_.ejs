                                                                        <option value="1661">Clearance (ID: 1661)
                                                                        </option>
                                                                        <option value="5695">Shop By Brand (ID: 5695)
                                                                        </option>
                                                                        <option value="17043">Men (ID: 17043)</option>
                                                                        <option value="17045">Women (ID: 17045)</option>
                                                                        <option value="871">Watches (ID: 871)</option>
